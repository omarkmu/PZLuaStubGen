{
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/types.ts"],
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "useUnknownInCatchVariables": true,
    "sourceMap": true,
    "noUnusedLocals": true
  }
}
